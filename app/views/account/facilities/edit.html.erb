<div class="container my-4">
    <h2>Mon établissement</h2>
    <% if @facility.completed == false %>
        <div class="alert alert-warning mb-2 mt-4" role="alert">
            <div class="h6 alert-heading"><i class="fas fa-exclamation-circle"></i> Les informations sur votre établissement sont actuellement incomplètes</div>
            Vous ne pourrez pas poster d'annonce tant que ces informations ne seront pas renseignées.
        </div>
    <% end %>
    <div class="row">
        <div class="col-12">
            <%= simple_form_for @facility, url: account_facility_path(@facility) do |f| %>
                <%= f.error_notification %>

                <div class="row mt-4">

                    <div class="col-12">
                        <legend class="h5"><i class="far fa-hospital"></i> Informations</legend>
                        <hr>
                    </div>

                    <div class="col-xs-12 col-lg-4">
                        <p>
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
                        </p>
                    </div>

                    <div class="col-xs-12 col-lg-8">
                        <%= f.input :name, required: true %>
                        <%= f.input :category, collection: {"" => ""}.merge(FACILITY_CATEGORIES), input_html: { class: "js-select2Searchable", data: { placeholder: "Selectionner une catégorie d'établissement" } }, label_method: :second, value_method: :first, required: true %>
                        <% if @facility.user.user_type == "health_facility_recruiter" %>
                            <%= f.input :finess_number, required: true %>
                        <% end %>
                        <%= f.input :description, as: :text, input_html: { class: "js-autoResizeTextarea"}, required: true %>
                        <%= f.input :phone_number %>
                        <%= f.input :email_address %>
                    </div>

                </div>

                <div class="row mt-4">

                    <div class="col-12">
                        <legend class="h5"><i class="fas fa-map-marker-alt"></i> Localisation</legend>
                        <hr>
                    </div>

                    <div class="col-xs-12 col-lg-4">
                        <p>
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
                        </p>
                    </div>

                    <div class="col-xs-12 col-lg-8">
                        <%= f.input :street, input_html: { class: "js-streetInput" }, required: true %>
                        <%= f.input :additional_address %>
                        <%= f.input :department, input_html: { class: "js-departmentInput" }, required: true %>
                        <%= f.input :zipcode, input_html: { class: "js-zipcodeInput" }, required: true %>
                        <%= f.input :city, input_html: { class: "js-cityInput" }, required: true %>
                    </div>

                </div>
                
                <div class="form-actions d-none d-lg-flex justify-content-end">
                    <%= f.button :submit, "Valider", :class => "btn btn-primary" %>
                </div>

                <div class="form-actions d-block d-lg-none">
                    <%= f.button :submit, "Valider", :class => "btn btn-primary btn-block" %>
                </div>

            <% end %>
        </div>
    </div>
</div>