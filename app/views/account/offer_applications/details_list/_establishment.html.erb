<dt class="col-lg-4">Localisation</dt>
<dd class="col-lg-8"><%= application.applicable.city %></dd>

<% if application.applicable.cession_local? %>
    <dt class="col-lg-4">Prix de vente</dt>
    <dd class="col-lg-8"><%= application.applicable.premises_price %> €</dd>
<% elsif application.applicable.location_local? %>
    <dt class="col-lg-4">Loyer</dt>
    <dd class="col-lg-8"><%= application.applicable.premises_rent %> € par mois</dd>
<% end %>

<dt class="col-lg-4">Surface</dt>
<dd class="col-lg-8"><%= application.applicable.premises_size %> m²</dd>

<dt class="col-lg-4">Nombre de pièces</dt>
<dd class="col-lg-8"><%= application.applicable.premises_rooms_number %></dd>

<dt class="col-lg-4">Meublé / Équipé</dt>
<% if application.applicable.premises_furnished == true %>
    <dd class="col-lg-8">Oui</dd>
<% else application.applicable.premises_furnished == false %>
    <dd class="col-lg-8">Non</dd>
<% end %>

<dt class="col-lg-4">Parking</dt>
<% if application.applicable.premises_has_parking == true %>
    <dd class="col-lg-8">Oui</dd>
<% else application.applicable.premises_has_parking == false %>
    <dd class="col-lg-8">Non</dd>
<% end %>

<dt class="col-lg-4">Respect des normes d'accessibilité</dt>
<% if application.applicable.accessible_premises == true %>
    <dd class="col-lg-8">Oui</dd>
<% else application.applicable.accessible_premises == false %>
    <dd class="col-lg-8">Non</dd>
<% end %>
