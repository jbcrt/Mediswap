<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' && controller_name != 'confirmations' && controller_name != 'unlocks' %>
  <div class="my-1">
  <%= link_to "Mot de passe oublié ?", new_password_path(resource_name) %>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' && controller_name != 'registrations' && controller_name != 'passwords' && controller_name != 'unlocks' %>
  <div class="my-1">
  <%= link_to "Vous n'avez pas reçu le mail de confirmation ?", new_confirmation_path(resource_name) %>
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' && controller_name != 'registrations' && controller_name != 'passwords' && controller_name != 'confirmations' %>
  <div class="my-1">
  <%= link_to "Vous n'avez pas reçu le mail de déblocage ?", new_unlock_path(resource_name) %>
  </div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div class="my-1">
    <%= link_to "S'enregistre avec #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %>
    </div>
  <% end %>
<% end %>

<%- if controller_name != 'sessions' && controller_name != 'passwords' && controller_name != 'confirmations' && controller_name != 'unlocks' %>
  <hr>
  <div class="my-2">
  <p class="text-center">Vous avez déjà un compte ?</p>
  <%= link_to "Se connecter", new_session_path(resource_name), class: "btn btn-outline-primary btn-block" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' && controller_name != 'passwords' && controller_name != 'confirmations' && controller_name != 'unlocks' %>
  <hr>
  <div class="my-2">
  <p class="text-center">Vous n'avez pas encore de compte ?</p>
  <%= link_to "Créer un compte", new_registration_path(resource_name), class: "btn btn-outline-primary btn-block" %>
  </div>
<% end %>
