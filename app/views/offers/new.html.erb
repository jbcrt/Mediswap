<div class="container my-4">
    <% if @offer.type == "Replacement" %>
        <%= render 'offers/forms/replacement_offer', offer: @offer %>
    <% elsif @offer.type == "Employment" %>
        <%= render 'offers/forms/employment_offer', offer: @offer %>
    <% elsif @offer.type == "Collaboration" %>
        <%= render 'offers/forms/collaboration_offer', offer: @offer %>
    <% elsif @offer.type == "Room" %>
        <%= render 'offers/forms/room_offer', offer: @offer %>
    <% end %>
</div>