<%= link_to offer_path(offer), :action => 'go', :class => "offer-card d-flex flex-column flex-wrap" do %>
    <div class="offer-card-badges d-block d-md-none mb-2">
        <% if offer.created_at.to_date == Date.today  %>
            <span class="badge badge-info-alt mr-1">
                <i class="fas fa-fire"></i> Nouveau
            </span>
        <% end %>
        <% if offer.offer_type == "premium" %>
            <span class="badge badge-warning-alt">
                <i class="fas fa-crown"></i> Premium
            </span>
        <% end %>
    </div>
    <div class="offer-card-top d-flex align-items-start justify-content-between flex-wrap">
        <div class="offer-card-title h4">
            <%= offer.title %>
        </div>
        <div class="offer-card-badges d-none d-md-block">
            <% if offer.created_at.to_date == Date.today  %>
            <span class="badge badge-info-alt">
                <i class="fas fa-fire"></i> Nouveau
            </span>
            <% end %>
            <% if offer.offer_type == "premium" %>
            <span class="badge badge-warning-alt ml-1">
                <i class="fas fa-crown"></i> Premium
            </span>
            <% end %>
        </div>
    </div>

    <div class="offer-card-facility-info mt-1">
        <%= offer.user.facility.name %>, <%= offer.city %> (<%= offer.zipcode.slice(0,2) %>)
    </div>

    <div class="offer-card-info d-flex flex-wrap mt-2">
        <div class="badge badge-primary-alt badge-big font-weight-normal m-1"><i class="fas fa-user-md mr-1"></i><%= PROFESSIONS[offer.profession] %></div>
        <div class="badge badge-primary-alt badge-big font-weight-normal m-1"><i class="fas fa-file-contract mr-1"></i><%= OFFERS["offer_types"][offer.contract_type] %></div>
        <% if !offer.starts_at.nil? %>
            <% if !offer.ends_at.nil? %>
                <div class="badge badge-primary-alt badge-big font-weight-normal m-1"><i class="far fa-calendar-alt mr-1"></i>du <%= l offer.starts_at, format: :default %> au <%= l offer.ends_at, format: :default %></div>
            <% else %>
                <div class="badge badge-primary-alt badge-big font-weight-normal m-1"><i class="far fa-calendar-alt mr-1"></i>à partir du <%= l offer.starts_at, format: :default %></div>
            <% end %>
        <% end %>
    </div>

    <div class="offer-card-bottom mt-2">
        <% if offer.created_at.to_date == Date.today  %>
        Postée aujourd'hui
        <% elsif offer.created_at.to_date == Date.today %>
        Postée hier
        <% else %>
        Postée le <%= l offer.created_at.to_date, format: :long %>
        <% end %>
    </div>
<% end %>