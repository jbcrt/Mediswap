<div class="container offer-show mb-3 mt-4">

    <div class="d-flex flex-column justify-content-center align-items-center">
        <h1 class="h2 text-center">
            <%= @offer.title %>
        </h1>
    </div>

    <hr class="mb-2">

    <div class="d-flex justify-content-between align-items-center">
        <div class="text-light-gray">
            <% if @offer.created_at.to_date == Date.today  %>
                Postée aujourd'hui
            <% elsif @offer.created_at.to_date == Date.today - 1 %>
                Postée hier
            <% else %>
                Postée il y a <%= (Date.today - @offer.created_at.to_date).to_i %> jours
            <% end %>
        </div>
        <div class="text-gray"><span class="badge badge-pill badge-primary">6</span> candidats</div>
    </div>

    <div class="custom-card mt-4">
        <div class="row align-items-center">
            <div class="col-xs-12 col-md-6 ">
                <div class="d-flex align-items-center px-2">
                    <div class="mr-3">
                        <% if @offer.user.avatar.attached? %>
                            <%= cl_image_tag @offer.user.avatar.key, height: 72, width: 72, crop: :thumb, gravity: :face, class: "avatar-big" %>
                        <% elsif @offer.user.title == "mr" %>
                            <%= image_tag "avatars/doctor_m", class: "avatar-big" %>
                        <% else %>
                            <%= image_tag "avatars/doctor_f", class: "avatar-big" %>
                        <% end %>
                    </div>
                    <div class="author-info">
                        <div class="author-name"><%= @offer.user.first_name %> <%= @offer.user.last_name %></div>
                        <div class="author-description"><%= PROFESSIONS[@offer.user.profession] %></div>
                        <div class="author-id">Numéro RPPS/ADELI : <%= @offer.user.professional_id_number %></div>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-lg-4 offset-lg-1 text-center mt-3 mt-lg-0">
                <div class="text-gray mb-1">Cette annonce vous intéresse ?</div>
                <div class="btn btn-primary btn-block">Postuler</div>
            </div>
        </div>
    </div>

    <div class="row my-4">

        <div class="col-xs-12 col-lg-4">
            <h2 class="h5">Informations</h2>
            <hr>
            <div class="offer-data">
                <h3 class="h6">Offre</h2>
                <div class="d-flex align-items-center">
                    <div class="offer-data-icon">
                        <i class="fas fa-file-contract"></i>
                    </div>
                    <div class="offer-data-content">
                        <div class="offer-data-content-label">Type de contrat</div>
                        <div class="offer-data-content-value"></div>
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <div class="offer-data-icon">
                        <i class="fas fa-wallet"></i>
                    </div>
                    <div class="offer-data-content">
                        <div class="offer-data-content-label">Rétrocession</div>
                        <div class="offer-data-content-value"><%= @offer.retrocession %> / <%= 100 - @offer.retrocession.to_i %></div>
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <div class="offer-data-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="offer-data-content">
                        <div class="offer-data-content-label">Localisation</div>
                        <div class="offer-data-content-value"><%= @offer.city %></div>
                    </div>
                </div>
                <h3 class="h6 mt-3">Dates</h2>

                <% if @offer.ends_at != nil %>
                    <div class="d-flex align-items-center">
                        <div class="offer-data-icon">
                            <i class="far fa-calendar-alt"></i>
                        </div>
                        <div class="offer-data-content">
                            <div class="offer-data-content-label">Du</div>
                            <div class="offer-data-content-value"><%= l @offer.starts_at, format: :default %></div>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="offer-data-icon">
                            <i class="far fa-calendar-alt"></i>
                        </div>
                        <div class="offer-data-content">
                            <div class="offer-data-content-label">Au</div>
                            <div class="offer-data-content-value"><%= l @offer.ends_at, format: :default %></div>
                        </div>
                    </div>
                <% else %>
                    <div class="d-flex align-items-center">
                        <div class="offer-data-icon">
                            <i class="far fa-calendar-alt"></i>
                        </div>
                        <div class="offer-data-content">
                            <div class="offer-data-content-label">À partir du</div>
                            <div class="offer-data-content-value"><%= l @offer.starts_at, format: :default %></div>
                        </div>
                    </div>
                <% end %>

                <h3 class="h6 mt-3">Déplacements</h2>

                <% if @offer.vehicle == true %>
                    <div class="d-flex align-items-center">
                        <div class="offer-data-icon">
                            <i class="fas fa-car"></i>
                        </div>
                        <div class="offer-data-content">
                            <div class="offer-data-content-label">Véhicule</div>
                            <div class="offer-data-content-value">Requis</div>
                        </div>
                    </div>
                <% else %>
                    <div class="d-flex align-items-center">
                        <div class="offer-data-icon">
                            <i class="fas fa-car"></i>
                        </div>
                        <div class="offer-data-content">
                            <div class="offer-data-content-label">Véhicule</div>
                            <div class="offer-data-content-value">Non requis</div>
                        </div>
                    </div>
                <% end %>

                <% if @offer.home_visiting == true %>
                    <div class="d-flex align-items-center">
                        <div class="offer-data-icon">
                            <i class="fas fa-home"></i>
                        </div>
                        <div class="offer-data-content">
                            <div class="offer-data-content-label">Domicile</div>
                            <div class="offer-data-content-value">Oui</div>
                        </div>
                    </div>
                <% else %>
                    <div class="d-flex align-items-center">
                        <div class="offer-data-icon">
                            <i class="fas fa-home"></i>
                        </div>
                        <div class="offer-data-content">
                            <div class="offer-data-content-label">Domicile</div>
                            <div class="offer-data-content-value">Non</div>
                        </div>
                    </div>
                <% end %>

                <% if @offer.health_facility_visiting == true %>
                    <div class="d-flex align-items-center">
                        <div class="offer-data-icon">
                            <i class="fas fa-hospital"></i>
                        </div>
                        <div class="offer-data-content">
                            <div class="offer-data-content-label">Établissement de santé</div>
                            <div class="offer-data-content-value">Oui</div>
                        </div>
                    </div>
                <% else %>
                    <div class="d-flex align-items-center">
                        <div class="offer-data-icon">
                            <i class="fas fa-hospital"></i>
                        </div>
                        <div class="offer-data-content">
                            <div class="offer-data-content-label">Établissement de santé</div>
                            <div class="offer-data-content-value">Non</div>
                        </div>
                    </div>
                <% end %>

                <h3 class="h6 mt-3">Commodités</h2>

                <% if @offer.housing == true %>
                    <div class="d-flex align-items-center">
                        <div class="offer-data-icon">
                            <i class="fas fa-bed"></i>
                        </div>
                        <div class="offer-data-content">
                            <div class="offer-data-content-label">Logement</div>
                            <div class="offer-data-content-value">Oui</div>
                        </div>
                    </div>
                <% else %>
                    <div class="d-flex align-items-center">
                        <div class="offer-data-icon">
                            <i class="fas fa-bed"></i>
                        </div>
                        <div class="offer-data-content">
                            <div class="offer-data-content-label">Logement</div>
                            <div class="offer-data-content-value">Non</div>
                        </div>
                    </div>
                <% end %>

                <% if @offer.secretariat == true %>
                    <div class="d-flex align-items-center">
                        <div class="offer-data-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="offer-data-content">
                            <div class="offer-data-content-label">Secrétariat</div>
                            <div class="offer-data-content-value">Oui</div>
                        </div>
                    </div>
                <% else %>
                    <div class="d-flex align-items-center">
                        <div class="offer-data-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="offer-data-content">
                            <div class="offer-data-content-label">Secrétariat</div>
                            <div class="offer-data-content-value">Non</div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>

        <div class="col-xs-12 col-lg-8 mt-4 mt-lg-0">

            <h2 class="h5">Description</h2>
            <hr>
            <div class="mt-2 mt-md-3 mb-4">
                <%=simple_format h @offer.description %>
            </div>

            <h2 class="h5">Photos</h2>
            <hr>
