<div class="container my-4 my-md-5">
    <div class="d-flex flex-column justify-content-center align-items-center">
        <h3><%= @offer.title %></h3>
        <div class="text-muted">
            <span class="badge badge-warning"><i class="fas fa-exclamation-circle"></i> Urgent</span> | 
            <i class="fas fa-file-contract"></i> <%= @offer.offer_type %> | 
            <i class="fas fa-map-marker-alt"></i> <%= @offer.offer_city_address %> | 
            <% if @offer.ends_at != nil %>
                <i class="far fa-calendar-alt"></i> du <%= l @offer.starts_at, format: :default %> au <%= l @offer.ends_at, format: :default %>
            <% else %>
                <i class="far fa-calendar-alt"></i> à partir du <%= l @offer.starts_at, format: :default %>
            <% end %>
        </div>
    </div>
    <hr class="mb-2">

    <div class="d-flex justify-content-between align-items-center text-muted">
        <div>
            <% if @offer.created_at.to_date == Date.today  %>
                Postée aujourd'hui
            <% elsif @offer.created_at.to_date == Date.today - 1 %>
                Postée hier
            <% else %>
                Postée il y a <%= (Date.today - @offer.created_at.to_date).to_i %> jours
            <% end %>
        </div>
        <div><span class="badge badge-pill badge-primary">6</span> candidats</div>
    </div>


    <div class="container-fluid my-4">
        <div class="row">

            <div class="col-xs-12 col-md-6 pl-0 px-xs-0 py-xs-1">
                <div class="view-card">
                    <h5>Informations</h5>
                    <hr>
                    <div class="px-2">

                        <h6><i class="fas fa-wallet"></i> Rétrocession</h6>
                        <ul>
                            <li>
                                <span class="text-muted"><i class="fas fa-percent"></i> <%= @offer.retrocession %> / <%= 100 - @offer.retrocession %></span>
                            </li>
                        </ul>

                        <h6><i class="fas fa-route"></i> Déplacements</h6>
                        <ul>
                            <% if @offer.vehicle == true %>
                                <li>
                                    <span class="text-muted"><i class="fas fa-car"></i> Véhicule obligatoire</span>
                                </li>
                            <% else %>
                                <li>
                                    <span class="text-muted"><i class="fas fa-car"></i> Véhicule facultatif</span>
                                </li>
                            <% end %>
                        </ul>

                        <% if @offer.housing == true || @offer.secretariat == true %>
                        <h6><i class="fas fa-thumbs-up"></i> Commodités</h6>
                        <ul>
                            <% if @offer.housing == true %>
                                <li>
                                    <span class="text-muted"><i class="fas fa-bed"></i> Logement fourni</span>
                                </li>
                            <% end %>

                            <% if @offer.secretariat == true %>
                                <li>
                                    <span class="text-muted"><i class="fas fa-phone"></i> Avec secrétariat</span>
                                </li>
                            <% end %>
                        </ul>
                        <% end %>

                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-6 pr-0 px-xs-0 py-xs-1">
                <div class="view-card">
                    <h5>Praticien</h5>
                    <hr>
                    <div class="d-flex px-2">
                        <div class="mr-3">
                            <% if @offer.user.avatar_id.present? %>
                                <%= cl_image_tag @offer.user.avatar_id, height: 75, width: 75, crop: :thumb, gravity: :face, class: "avatar-show" %>
                            <% elsif @offer.user.title == 0 %>
                                <%= image_tag "avatars/doctor_f", class: "avatar-show" %>
                            <% else %>
                                <%= image_tag "avatars/doctor_m", class: "avatar-show" %>
                            <% end %>
                        </div>
                        <div>
                            <h6 class="mb-0"><%= @offer.user.first_name %> <%= @offer.user.last_name[0] %>.</h6>
                            <span class="text-muted">membre depuis <%= (Date.today - @offer.user.created_at.to_date).to_i %> jours</span>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="offer-description view-card my-4">
        <h5>Description</h5>
        <hr>
        <p class="text-muted"><%= @offer.description %></p>
    </div>

    <div class="row justify-content-center">
        <div class="col-xs-12 col-md-6 col-lg-5 col-xl-4">
            <div class="btn btn-primary btn-lg btn-block">Postuler</div>
        </div>
    </div>

</div>