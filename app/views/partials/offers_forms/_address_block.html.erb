            <div class="row form-row">
                <div class="col-12 col-md-3">
                    <%= f.input :zipcode, input_html: { class: "js-zipcodeInput", value: "#{current_user.facility.zipcode}" }, required: true %>
                </div>
                <div class="col-12 col-md-9">
                    <%= f.input :city, input_html: { class: "js-cityInput", value: "#{current_user.facility.city}" }, required: true %>
