<div class="container my-5">
  <h1 class="text-center mb-3">Mot de passe oublié</h1>
  <div class="row">
    <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
      <div class="custom-card">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, label: "Saisissez votre adresse email", required: true, autofocus: true, input_html: { autocomplete: "email" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Réinitialiser mon mot de passe", :class => "btn btn-primary btn-block" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>