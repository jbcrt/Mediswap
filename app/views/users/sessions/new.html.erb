<div class="container my-5">
  <h1 class="text-center">Connectez-vous</h1>
  <p class="text-center text-secondary">ou <%= link_to "créez votre compte", new_registration_path(resource_name) %></p>
  <div class="row">
    <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
      <div class="custom-card">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <div class="d-flex justify-content-between">
              <%= f.input :remember_me, as: :boolean, wrapper: :custom_boolean if devise_mapping.rememberable? %>
              <%= link_to "Mot de passe oublié ?", new_password_path(resource_name) %>
            </div>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Se connecter", :class => "btn btn-primary btn-block" %>
          </div>
        <% end %>

        <hr>

        <div class="d-flex flex-column">
          <%= link_to "Vous n'avez pas reçu l'email de confirmation ?", new_confirmation_path(resource_name), class: "text-center my-1" %>
          <%= link_to "Vous n'avez pas reçu l'email de déblocage ?", new_unlock_path(resource_name), class: "text-center my-1" %>
        </div>
      </div>
    </div>
  </div>
</div>